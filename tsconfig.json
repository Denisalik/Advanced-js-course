{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "esnext",
//    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react-jsx",
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "types": [
      "webpack-env",
      "node",
      "jest"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules/@types/jest"
  ]
}
